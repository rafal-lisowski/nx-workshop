{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "util-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
        "type": "string",
        "description": "Directory",
        "x-prompt": {
          "message": "Add directory name",
          "type": "list",
          "items": [
            {
              "value": "store",
              "label": "Store"
            },
            {
              "value": "api",
              "label": "Api"
            },
            {
              "value": "shared",
              "label": "Shared"
            }
          ]
        }
    }
  },
  "required": ["name", "required"]
}
